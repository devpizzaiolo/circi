	<div id="franchise_enquiry_form" class="row">
		<div class="col-12 col-md-10">
			<% @franchise_enquiry = FranchiseEnquiry.new %>
			<%= simple_form_for @franchise_enquiry, :remote => true, :html => {:class => 'default-form inline-fields'} do |f| %>
			<div class="row form-decor">
				<div class="col-12 col-md-6 form-control-decor">
					<%= f.input :first_name, :required => true, :input_html => {:class => "validate[required]"}, :placeholder => 'First Name', :label => false %>
				</div>
				<div class="col-12 col-md-6 form-control-decor">
					<%= f.input :last_name, :required => true, :input_html => {:class => "validate[required]"}, :placeholder => 'Last Name', :label => false %>
				</div>
				<div class="col-12 col-md-6 form-control-decor">
					<%= f.input :city, :required => true, :input_html => {:class => "validate[required]"}, :placeholder => 'City', :label => false %>
				</div>
				<div class="col-12 col-md-6 form-control-decor">
					<%= f.input :address_1, :required => true, :input_html => {:class => "validate[required]"}, :placeholder => 'Address 1', :label => false %>
				</div>
				<div class="col-12 col-md-6 form-control-decor">
					<%= f.input :address_2, :required => false, :input_html => {:class => ""}, :placeholder => 'Address 2(e.g. unit #574 or apt# 267)', :label => false %>
				</div>
				<div class="col-12 col-md-6 form-control-decor">
					<%= f.input :email, :required => true, :input_html => {:class => "validate[required,custom[email]]"}, :placeholder => 'E-mail', :label => false %>
				</div>
				<div class="col-12 col-md-6 form-control-decor">
					<%= f.input :phone, :required => true, :input_html => {:class => "validate[required,custom[phone]]"}, :placeholder => 'Phone number', :label => false %>	
				</div>
				<div class="col-12 col-md-3 form-control-decor">
					<%= f.input :province, :required => true, :input_html => {:class => "validate[required]"}, :placeholder => 'Province', :label => false %>
				</div>
				<div class="col-12 col-md-3 form-control-decor">
					<%= f.input :postal_code, :required => true, :input_html => {:class => "validate[required]"}, :placeholder => 'Postal Code', :label => false %>
				</div>
				<div class="col-12 col-md-12 form-control-decor">
					<div class="form-inner-title">questions.</div>
				</div>
				<div class="col-12 col-md-12 form-control-decor">
					<%= f.input :preferred_territory, :required => true, :input_html => {:class => "validate[required]"}, :placeholder => "Preferred Territory", :label => false %>
				</div>
				<div class="col-12 col-md-12 form-control-decor">
					<%= f.input :how_soon, :required => true, :input_html => {:class => "validate[required]"}, :placeholder => "How soon would you like to be in business?", :label => false %>
				</div>
				<div class="col-12 col-md-12 form-control-decor">
					<%= f.input :how_did_you_hear_about_us, :required => true, :input_html => {:class => "validate[required]"}, :placeholder => "How did you hear about us?", :label => false %>
				</div>
				<div class="col-12 col-md-6 form-control-decor">
					<div class="control-group select ">
						<div class="controls">
							<%= show_simple_captcha(:object => "franchise_enquiry") %>
						</div>
					</div>
				</div>
				<div class="col-12 col-md-12 form-control-decor">
					<%= f.button :submit, "SUBMIT", :class => "btn-green page-btn" %>
				</div>
				
			<% end %>
			</div>
		</div>
	</div>

