	<%= render(:partial => 'common/header') %>	
	<div class="inner-page-wrap admin-wrap desktop-gray">
		<!-- line 56 -->
		 
	  <div id="content" class="container">
			<%= render :partial => "common/admins_menu" %>
				
      <!-- Time Now: <%= Time.now %> -->	
