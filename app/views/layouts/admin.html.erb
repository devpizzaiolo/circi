					<%= bootstrap_flash %>
				</div>
			</div>
			</div>
      <%= yield %>
    </div> 
	</div>
		<!--Footer Start-->
  <footer>
    <div class="container">
        <%= render(:partial => 'common/footer_menu') %>
    </div>
