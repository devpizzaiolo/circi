<div class="container">
	<div class="body-container admin-form-body row span6 centered">
		<div class="col-12 col-md-12 text-center">
			<h2 class="static-header green text-center">Admin Sign in</h2>
		</div>
		<div class="col-12 col-md-4 offset-md-4 admin-form">
			<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'default-form'}) do |f| %>
				<div class="form-inputs">
					<%= f.input :email, :required => false, :autofocus => true %>
					<%= f.input :password, :required => false %>
				</div>

				<%= f.button :submit, "Sign in", class: 'button default' %>
				
			<% end %>
		</div>
	</div>

<%#= render "devise/shared/links" %>
</div>

